{
  "name": "vp-test-runner",
  "displayName": "VP test runner",
  "description": "VP test runner",
  "publisher": "lzp",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.83.0"
  },
  "icon": "image/icon.png",
  "repository": {
		"url": "https://github.com/a1245582339/vp-test-runner"
	},
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "filenames": [
          "*.spec.json"
        ]
      }
    ],
    "commands": [
      {
        "command": "vp.run-spec-local",
        "title": "Run Local VP"
      },
      {
        "command": "vp.run-spec-online",
        "title": "Run Online VP"
      },
      {
        "command": "vp.run-case-local",
        "title": "Run Local VP"
      },
      {
        "command": "vp.run-case-online",
        "title": "Run Online VP"
      },
      {
        "command": "vp.run-spec-local-folder",
        "title": "Run Local VP"
      },
      {
        "command": "vp.run-spec-online-folder",
        "title": "Run Online VP"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vp.run-spec-local-folder",
          "group": "02_vp@1",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.(spec)\\.(json)$/"
        },
        {
          "command": "vp.run-spec-online-folder",
          "group": "02_vp@2",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.(spec)\\.(json)$/"
        }
      ]
    },
    "configuration": [
      {
        "title": "VP test",
        "properties": {
          "vp.enableCodeLens": {
            "type": [
              "boolean",
              "null"
            ],
            "default": null
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "if exist out rmdir /s /q out",
    "compile": "npm run clean && tsc -p ./ && md out\\assets && copy /y assets out\\assets\\",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/json-to-ast": "^2.1.2",
    "@types/jsonpath": "^0.2.1",
    "json-to-ast": "^2.1.0",
    "jsonpath": "^1.1.1"
  }
}
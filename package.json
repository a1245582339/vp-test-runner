{
  "name": "vp-test-runner",
  "displayName": "VP test runner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "filenames": [
          "*.spec.json"
        ]
      }
    ],
    "commands": [
      {
        "command": "vp.run-spec-local",
        "title": "Run Local VP"
      },
      {
        "command": "vp.run-spec-online",
        "title": "Run Online VP"
      },
      {
        "command": "vp.debug-spec",
        "title": "Debug VP"
      },
      {
        "command": "vp.run-spec-local-folder",
        "title": "Run Local VP"
      },
      {
        "command": "vp.run-spec-online-folder",
        "title": "Run Online VP"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vp.run-spec-local-folder",
          "group": "02_vp@1",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.(spec)\\.(json)$/"
        },
        {
          "command": "vp.run-spec-online-folder",
          "group": "02_vp@2",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.(spec)\\.(json)$/"
        }
      ]
    },
    "configuration": [
      {
        "title": "VP test",
        "properties": {
          "vp.enableCodeLens": {
            "type": [
              "boolean",
              "null"
            ],
            "default": null
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}